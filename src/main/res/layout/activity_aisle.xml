<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3050101"
        tools:context="com.example.spar.button.Aisle">

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Code Scanned"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:fontFamily="@font/open_sans_light" />

        <TextView
            android:id="@+id/text"
            android:layout_width="380sp"
            android:layout_height="25sp"
            android:layout_below="@id/code"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontFamily="font/open_sans_light" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="380sp"
            android:layout_height="50sp"
            android:layout_below="@id/text"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontFamily="font/open_sans_light" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="380sp"
            android:layout_height="50sp"
            android:layout_below="@id/text2"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontFamily="font/open_sans_light" />

        <Button
            android:id="@+id/left"
            android:layout_width="400sp"
            android:layout_height="100sp"
            android:layout_below="@id/text3"
            android:onClick="buttonClicked"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFEB3B"
            android:text="1. Left Aisle"
            android:textColor="@android:color/black"
            app:fontFamily="font/open_sans_light"
            android:textStyle="bold"
            android:textSize="35sp" />

        <Button
            android:id="@+id/right"
            android:layout_width="400sp"
            android:layout_height="100sp"
            android:layout_below="@id/left"
            android:onClick="buttonClicked"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFEB3B"
            android:text="2. Right Aisle"
            android:textColor="@android:color/black"
            app:fontFamily="font/open_sans_light"
            android:textStyle="bold"
            android:textSize="35sp" />

        <Button
            android:id="@+id/scan"
            android:layout_width="400sp"
            android:layout_height="100sp"
            android:layout_below="@id/right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFEB3B"
            android:onClick="buttonClicked"
            android:text="3. Scan New Code"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:fontFamily="font/open_sans_light" />

        <Button
            android:id="@+id/select"
            android:layout_width="400sp"
            android:layout_height="100sp"
            android:layout_below="@id/scan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFEB3B"
            android:onClick="buttonClicked"
            android:text="4. Select New Mode"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:fontFamily="font/open_sans_light" />
    </RelativeLayout>
</ScrollView>

